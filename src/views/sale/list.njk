{% extends "layout.njk" %}

{% block head %}
    <title>Detalhes de Vendas</title>
    <link rel="stylesheet" href="/sale.css"/>
{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">
            <div class="col-md-6">
                <h4>Vendas</h4>
            </div>
            <div class="col-md-6 box-balance">
                <strong class="sales">Vendas: {{ sales.length }} </strong>
                <strong class="balance">Total: {{ total }}</strong>
            </div>
        </div>



        <form class="needs-validation" action="/salesdates" method="post" >
            <div class="form-row">
              <div class="col-md-4 mb-3">
                <label for="validationCustom01">Data Inicial</label>
                <input type="date" class="form-control" value="{{startDate}}" id="startDate"  name="startDate">
              </div>
              <div class="col-md-4 mb-3">
                <label for="validationCustom02">Data Final</label>
                <input type="date" id="finalDate" value="{{finalDate}}" name="finalDate" class="form-control">
              </div>
            </div>
            <div class="row justify-content-end ">
                <div class="col-md-5 mr-3 ">
                    <button class="btn btn-primary " type="submit">Pesquisar</button>
                </div>
            </div>
            {% if dateFilter != false %}
            <div class="row justify-content-end">
                <div class="col-md-5  mr-3 ">
                        <a href="/sales" class="btn btn-dark ">Limpar</a>
                </div>
            </div>
                {% endif %}
          </form>
        


        <div class="row box-sale-row">
            {% for sale in sales %}
                {% if sale != null %}
                    <div class="box-sale col-md-3">
                        <div class="header"> 
                            <div class="">
                                <strong class="data">{{ sale.formattedDate }}</strong>
                            </div>
                        
                            <div class="total">
                                <strong>Total: {{ sale.sale.formattedTotal }}</strong>
                            </div>
                        </div>

                        <div class="box-descount">
                            <strong>Desconto: {{sale.sale.descount}} %</strong>
                        </div>

                        <div class="row box-button">
                            <form  action="/sales/delete/{{sale._id}}?_method=DELETE" method="POST" onSubmit="deleteSale(event)">
                                <button class="btn btn-danger button-delete">Deletar</button>
                            </form>
                        </div>
                        
                        {% for product in sale.sale.products %}
                                <div class="data-product">
                                    <strong>{{product.product.name}}</strong>
                                    <strong>QTD: {{product.quantity}}</strong>
                                    <strong>Valor: {{product.formattedPrice}}</strong>
                                </div>  
                            
                        {% endfor %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>

<script>
    function deleteSale(e) {
        if(!window.confirm("Deseja realmente deletar essa venda ?")) {
            e.returnValue = false; 
        }
    }
</script>



{% endblock %}        

        


