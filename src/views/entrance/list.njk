{% extends "layout.njk" %}

{% block head %}
    <title>Entradas</title>
    
    
{% endblock %}

{% block content %}
    <div class="container mt-5 card">
        <div class="row card-body ">
            <div class="col ">
                <h4>Entradas</h4>
                <hr>
            </div>
            <div class="card">
                <div class="card-body rounded shadow-sm p-3 ">
                    <strong >Vendas: </strong> 
                    <strong > {{ entrances.length }} </strong><br><hr>
                    <strong  >Lucro :</strong>
                    <strong class="rounded p-1 bg-white text-success" >{{ total }}</strong>
                </div>
            </div>
        </div>

        <form class="search" action="/entrancesdate" method="post">
            <div class="row card-body">            
                <div class="col-md-4">
                    <label for="startDate" class="form-label">Data Inicial</label>
                    <input id="startDate" value="{{startDate}}" class="form-control" type="date" name="startDate" />
                </div>
                <div class="col-md-4">
                    <label for="finalDate" class="form-label">Data final</label>
                    <input id="finalDate" value="{{finalDate}}" class="form-control" type="date" name="finalDate" />
                </div>
                <div class="col-md-4">
                    <button class="btn btn-primary mt-4" type="submit">Pesquisar</button>
                    {% if dateFilter != false %}
                        <a href="/entrances" class="btn btn-secondary">Limpar</a>
                    {% endif %}
                </div>
            </div>
        </form>
        <div class="card-body">

            <table class="table table-striped table-hover">
                <tr>
                    <th>Tipo de Entrada</th>
                    <th>Valor</th>
                    <th>Data</th>
                </tr>
                {% for entrance in entrances %}
                    {% if entrance != null %}
                        <tr>
                            <td><a href="#">Venda</a></td>
                            <td>{{ entrance.formattedValue }}</td>
                            <td>{{ entrance.formattedDate }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </table>
        </div>
    </div>    
{% endblock %}

        

